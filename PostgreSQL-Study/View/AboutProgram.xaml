<Page x:Class="PostgreSQL_Study.View.AboutProgram"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PostgreSQL_Study.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutProgram">

    <Grid Margin="50">
        <StackPanel>
            <Label Content="О программе"
                   FontSize="35"/>

            <Label Content="Обучающее приложение 'PostgreSQL Study' для PostgreSQL"
                   FontSize="18"
                   Margin="0,15,0,0"/>

            <TextBlock Text="Данное приложение разработано для обучения студентов языку SQL, в частности работе с PostgreSQL. Оно представляет собой интерактивный учебный материал, включающий теоретические уроки и возможность выполнения SQL-запросов в запроснике для самопроверки."
                       TextWrapping="Wrap"
                       Width="600"
                       HorizontalAlignment="Left"
                       FontSize="15"
                       Margin="5,5,0,0"/>

            <Label Content="Создал: Дмитриев Егор - 310а"
                   FontSize="15"
                   Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Page>
